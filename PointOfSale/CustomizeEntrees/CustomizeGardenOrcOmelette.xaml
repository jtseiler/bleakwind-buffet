<UserControl x:Class="PointOfSale.CustomizeEntrees.CustomizeGardenOrcOmelette"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizeEntrees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Garden Orc Omelette!"/>
        <StackPanel>
            <CheckBox FontSize="20" Margin="5" Padding="5,-8,0,0">Broccoli</CheckBox>
            <CheckBox FontSize="20" Margin="5" Padding="5,-8,0,0">Tomato</CheckBox>
            <CheckBox FontSize="20" Margin="5" Padding="5,-8,0,0">Mushrooms</CheckBox>
            <CheckBox FontSize="20" Margin="5" Padding="5,-8,0,0">Cheddar</CheckBox>
            <Button Content="Done" Margin="9" ClickMode="Release"/>
        </StackPanel>
    </StackPanel>
</UserControl>
