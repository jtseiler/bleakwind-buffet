<UserControl x:Class="PointOfSale.CustomizeSides.CustomizeFriedMiraak"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizeSides"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <ListBox Name="selectSize" SelectedIndex="0" Margin="8"/>
            <CheckBox FontSize="20" Margin="5" Padding="5,-8,0,0">Small</CheckBox>
            <CheckBox FontSize="20" Margin="5" Padding="5,-8,0,0">Medium</CheckBox>
            <CheckBox FontSize="20" Margin="5" Padding="5,-8,0,0">Large</CheckBox>
            <Button Content="Done" Margin="9" ClickMode="Release"/>
        </StackPanel>
    </Grid>
</UserControl>
